<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <!-- 支持多个 .NET Framework 版本，兼容 Windows 7 -->
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.1" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.2" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <runtime>
        <!-- 禁用服务器 GC 减少内存占用 (工作站模式更省内存) -->
        <gcServer enabled="false" />
        <!-- 启用并发 GC 减少 UI 卡顿 -->
        <gcConcurrent enabled="true" />
        <!-- 允许大对象堆压缩 (需要 .NET 4.5.1+) -->
        <gcAllowVeryLargeObjects enabled="true" />
        <!-- 延迟程序集加载 -->
        <generatePublisherEvidence enabled="false"/>
        <!-- 优化程序集加载 -->
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <probing privatePath="lib" />
        </assemblyBinding>
    </runtime>
    <appSettings>
        <!-- 启用懒加载减少启动内存占用 -->
        <add key="EnableLazyLoading" value="true" />
        <!-- 限制日志条目数量减少内存 (低配电脑建议设为 500) -->
        <add key="MaxLogEntries" value="1000" />
        <!-- 低配模式：减少动画效果和刷新频率 (true/false) -->
        <add key="LowPerformanceMode" value="false" />
        <!-- UI 刷新间隔 (毫秒，低配电脑建议设为 100-200) -->
        <add key="UIRefreshInterval" value="50" />
        <!-- 启用双缓冲减少闪烁 -->
        <add key="EnableDoubleBuffering" value="true" />
    </appSettings>
</configuration>